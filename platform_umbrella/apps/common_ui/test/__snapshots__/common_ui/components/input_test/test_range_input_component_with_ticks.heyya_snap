<div id="foo" phx-hook="Range">
  <div class="relative pb-6">
    <div style="left: calc(20% + 7px)" class="absolute flex flex-col items-center -translate-x-1/2">
      <span phx-value-label="20%" phx-value-percentage="0.2" phx-value-value="2.0" class="font-semibold text-sm text-gray dark:text-gray-light select-none ">
        20%
      </span>

      <span class="w-0.5 bg-gray-lighter h-3 mt-1 rounded-lg"></span>
    </div><div style="left: calc(80% + -7px)" class="absolute flex flex-col items-center -translate-x-1/2">
      <span phx-value-label="80%" phx-value-percentage="0.8" phx-value-value="8.0" class="font-semibold text-sm text-gray dark:text-gray-light select-none ">
        80%
      </span>

      <span class="w-0.5 bg-gray-lighter h-3 mt-1 rounded-lg"></span>
    </div>

    <datalist id="foo-ticks">
      <option value="2"></option><option value="8"></option>
    </datalist>
  </div>

  <div class="relative">
    <input id="foo-input" type="range" name="foo" value="5" min="0" max="10" list="foo-ticks" class="relative z-30 appearance-none bg-transparent cursor-pointer w-full slider-thumb:appearance-none slider-thumb:box-border slider-thumb:rounded-full slider-thumb:border-2 slider-thumb:border-solid slider-thumb:border-primary slider-thumb:bg-white slider-thumb:dark:bg-gray-darkest-tint h-[32px] slider-thumb:size-[32px]" id="foo">

    <div id="foo-progress-bg" phx-update="ignore" class="absolute h-[4px] z-10 bg-gray-lighter dark:bg-gray-darkest-tint w-full rounded pointer-events-none top-[14px]"></div>

    <div id="foo-progress" phx-update="ignore" class="absolute h-[4px] z-20 bg-primary rounded-l pointer-events-none top-[14px]"></div>

    <div id="foo-value" phx-update="ignore" class="absolute top-0 bottom-0 inline-flex items-center justify-center size-[32px] z-30 font-semibold text-primary pointer-events-none">
      5
    </div>
  </div>

  
</div>