---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content2 from '~/components/widgets/Content2.astro';
import InfoWidget from '~/components/widgets/InfoWidget.astro';
import StartBuild from '~/components/widgets/StartBuild.astro';
import VideoModal from '~/components/widgets/VideoModal';
import RecentPosts from '~/components/widgets/RecentPosts.astro';
import Image from '~/components/common/Image.astro';
import StartLocal from '~/components/widgets/StartLocal.astro';
export const prerender = true;

const metadata = {
  title: 'Batteries Included: Infrastructure for the AI age',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero>
    <Fragment slot="subtitle">Infrastructure for the AI age</Fragment>
    <Fragment slot="title">The easiest to use self-hosted AI platform.</Fragment
    >
    <Fragment slot="content">
      Deploy large language models, vector databases, and Jupyter notebooks in
      seconds. All the tools that hyperscalers rely on to build LLMs, now
      available for your self-hosted infrastructure. No YAML required.
    </Fragment>
    <div class="mt-12 mx-auto max-w-screen-md">
      <div class="flex justify-center">
        <VideoModal
          url="https://www.youtube.com/embed/4k8CGRuU8BE?si=b3FCJcE9t8GUz9cq"
          client:load>
          <button class="btn-fourth !w-full">
            <p class="flex-shrink-0">Watch the demo</p>
            <Image
              width={32}
              height={32}
              src="~/assets/images/icons/play-circle.svg"
              alt="play circle"
            />
          </button>
        </VideoModal>
      </div>
      <div class="mt-2 flex justify-center">
        <a href="https://home.batteriesincl.com/login" class="btn-fifth">
          <p class="flex-shrink-0">Get started</p>
        </a>
      </div>
      <div class="mt-12">
        <VideoModal
          url="https://www.youtube.com/embed/4k8CGRuU8BE?si=b3FCJcE9t8GUz9cq"
          client:load>
          <button class="aspect-video overflow-hidden group relative">
            <Image
              class="group-hover:blur-sm duration-300"
              src="~/assets/images/home/demo.png"
              alt="image modal"
            />
            <div
              class="absolute invisible opacity-0 group-hover:opacity-100 group-hover:visible top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 duration-300">
              <Image
                class="size-20"
                src="~/assets/images/icons/play-circle.svg"
                alt="play circle"
              />
            </div>
          </button>
        </VideoModal>
      </div>
    </div>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Automated state-of-the-art AI models and tools with security, scale, and monitoring out of the box"
    items={[
      {
        title: 'Deploy production-ready LLMs and vector databases instantly',
        description:
          'Launch Ollama, OpenWebUI, PGVector and other AI infrastructure components. Production-ready setups that work with your existing stack. No config required.',
        icon: 'aistack',
      },
      {
        title:
          'Deploy web services at the speed of your users with autoscaling',
        description:
          'Build and rollout your serverless apps with dynamic scaling and security. Choose private cloud or on-prem.',
        icon: 'kubernetes',
      },
      {
        title: 'Enterprise-grade PostgreSQL with vector extensions',
        description:
          'Purpose-built database infrastructure for AI applications with pgvector support. Store embeddings, manage model metadata, and handle high-throughput AI workloads seamlessly.',
        icon: 'postgresql',
      },
    ]}>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-[#FAFAFA] dark:bg-transparent"></div>
    </Fragment>
  </Features>

  <StartLocal />

  <!-- Content Widget **************** -->

  <Content2
    title="All the infrastructure you need to build and deploy AI applications"
    classes={{ headline: 'mt-20 lg:mt-24 xl:mt-28 max-w-3xl' }}
    items={[
      {
        title: 'Complete MLOps and AI development stack',
        description:
          'Deploy Jupyter notebooks, MLflow, model registries, and inference servers with enterprise-grade monitoring. Build, train, and deploy AI models with the same tools used by leading AI companies, all self-hosted and under your control.',
        link: '/solutions/ai',
        image: {
          src: '~/assets/images/solutions/operational-tools/demo.png',
          alt: 'MLOps and AI development tools',
        },
      },
      {
        title: 'Advanced operational tools',
        description:
          'Empower your team with purpose-built tools for effortless monitoring and maintenance. Ensure high availability and performance with proactive monitoring and self-healing systems. ',
        link: '/solutions/sre_tools',
        image: {
          src: '~/assets/images/solutions/operational-tools/demo.png',
          alt: 'advanced operational tools',
        },
      },
      {
        title: 'Industry-leading security',
        description:
          'Manage critical security configurations effortlessly with our unified command center. Benefit from ubiquitous SSO, mesh networking, automated SSL, and flexible deployment options, all with dynamically updating permissions.',
        link: '/solutions/security',
        image: {
          src: '~/assets/images/solutions/security/demo.png',
          alt: 'industry leading security',
        },
      },
      {
        title: 'Efficiency with cost-effective scaling',
        description:
          'Leverage top-tier autoscaling to reduce waste and ensure efficient, cost-effective scaling for your applications - including pre-prod testing with blue/green canary deployments',
        link: '/solutions/web-deploy',
        image: {
          src: '~/assets/images/solutions/web-services/demo.png',
          alt: 'cost effective scaling',
        },
      },
    ]}>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-[#FAFAFA] dark:bg-transparent border-t">
      </div>
    </Fragment>
  </Content2>

  <InfoWidget
    title="Access the same AI infrastructure that powers the world's leading LLMs"
    description="Batteries Included brings you the complete AI infrastructure stack used by hyperscalers and AI companies. Deploy Ollama, vector databases, Jupyter notebooks, and more. All fully open-sourced, production-ready, and designed for self-hosting. No vendor lock-in, no compromises - just the tools you need to build world-class AI applications on your own infrastructure."
    link="/posts/open-source-payoff"
  />

  <!-- Posts Widget ****************** -->
  <RecentPosts />

  <StartBuild />
</Layout>
