---
import Layout from '~/layouts/PageLayout.astro';
import Headline from '~/components/ui/Headline.astro';
import PricingCard from '~/components/widgets/PricingCard';
const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <div class="py-12 lg:py-16 xl:scroll-py-20">
    <div class="u-container">
      <Headline title="Pricing" classes={{ container: 'text-left' }} />
      <div class="mt-10 text-center">
        <h2 class="text-2xl font-bold text-primary-600 mb-2">
          Limited Time Public Beta Offer
        </h2>
        <p class="text-xl">
          Batteries Included is currently free for all users during our public
          beta period.
        </p>
      </div>
      <div class="mt-8">
        <div class="flex flex-col gap-y-8 md:flex-row md:gap-x-10">
          <div class="md:w-1/2">
            <PricingCard
              title="Free Plan"
              description="Perfect for development and small workloads"
              options={[
                'Supports Linux and macOS environments',
                'Small cluster deployment (up to 3 nodes)',
                'Single-node Docker development environment',
                'Full platform capabilities',
                'Powerful and intuitive user interface',
                'Built on enterprise-grade open source technologies',
              ]}
              client:load
            />
          </div>
          <div class="md:w-1/2">
            <PricingCard
              title="Premium Plan"
              description="For production and larger deployments"
              preference={{
                battery: { quantity: 6, price: 5, per: 'month' },
                pod: { quantity: 3, price: 0.08, per: 'hour' },
              }}
              options={[
                'Everything in Free Plan',
                'Scale beyond 3 nodes for production workloads',
                'Simple usage-based pricing for production environments',
              ]}
              client:load
            />
          </div>
        </div>
      </div>
      <div class="mt-10 text-center">
        <p class="text-lg font-medium">
          Have questions about our pricing or need additional information?
        </p>
        <p class="mt-2">
          <a
            href="https://join.slack.com/t/batteries-included/shared_invite/zt-2qw1pm9pz-egaqvjbMuzKNvCpG1QXXHg"
            class="text-primary-600 hover:text-primary-700 font-semibold"
            target="_blank"
            rel="noopener">
            Join us on Slack
          </a>
        </p>
      </div>
    </div>
  </div>
</Layout>
