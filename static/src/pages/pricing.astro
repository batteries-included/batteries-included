---
import Layout from "~/layouts/PageLayout.astro";
import Headline from "~/components/ui/Headline.astro";
import PricingCard from "~/components/widgets/PricingCard";

const metadata = {
  title: "Pricing",
};
---

<Layout metadata={metadata}>
  <div class="py-12 lg:py-16 xl:scroll-py-20">
    <div class="u-container">
      <Headline title="Pricing" classes={{ container: "text-left" }} />
      <div class="mt-10">
        <div class="flex flex-col gap-y-8 md:flex-row md:gap-x-10">
          <div class="md:w-1/2">
            <PricingCard
              title="Free Plan"
              description="All clusters less than 3 nodes"
              options={[
                "OSX + Linux",
                "Built on Open Source",
                "The most powerful and flexible platform",
                "Easy to use powerful user interface",
                "Single node docker development environment",
              ]}
              client:load
            />
          </div>
          <div class="md:w-1/2">
            <PricingCard
              title="Premium"
              description="All clusters more than 3 nodes"
              preference={{
                description:
                  "Explore our simple usage-based pricing structure. Pay for what you use in production sized clusters.",
                battery: { quantity: 4, price: 10, per: "month" },
                pod: { quantity: 3, price: 0.05, per: "hour" },
              }}
              client:load
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
